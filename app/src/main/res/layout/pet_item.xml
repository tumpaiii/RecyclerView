<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    android:backgroundTint="#FFFFFF"
    android:layout_gravity="center"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/pet_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:contentDescription="@string/your_new_best_friend_is_waiting_here"
            android:src="@drawable/img_2" />

        <TextView
            android:id="@+id/pet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/the_pet_spot"
            android:textColor="#333333"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/pet_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_new_best_friend_is_waiting_here"
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/pet_personality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loyal_playful_loyal"
            android:textColor="#888888"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
